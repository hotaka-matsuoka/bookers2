<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <% unless @user.image %>
          <%= image_tag 'no_image.jpg' %>
        <% else %>
          <%= attachment_image_tag(@user, :image, :fill, 100, 100, format: "jpg")%>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user.id) do %>
            <i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></i>
          <% end %>
        </div>
        <h2>New Book</h2>
        <%= form_with(model: @book, local: true) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="field row">
            <label for="title">Title</label>
            <%= f.text_field :title, class: "col-xs-12 book_title" %>
          </div>
          <div class="field row">
            <label for="opinion">Opinion</label>
            <%= f.text_area :opinion, class: "col-xs-12 book_body" %>
          </div>
          <div class="actions row">
            <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <% unless @user.image %>
                  <%= image_tag 'no_image.jpg', size: '50x50' %>
                <% else %>
                  <%= attachment_image_tag(@user, :image, :fill, 50, 50, format: "jpg")%>
                <% end %>
              </td>
              <td>
                <%= link_to "#{book.title}", book_path(book) %>
              </td>
              <td>
                <%= book.opinion %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>