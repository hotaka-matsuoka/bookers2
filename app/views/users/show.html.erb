<div class="body">
  <div class="container">
    <div class="row">
      <%= render "/books/left_side" %>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <% unless @user.image %>
                  <%= image_tag 'no_image.jpg', size: '50x50' %>
                <% else %>
                  <%= attachment_image_tag(@user, :image, :fill, 50, 50, format: "jpg")%>
                <% end %>
              </td>
              <td>
                <%= link_to "#{book.title}", book_path(book) %>
              </td>
              <td>
                <%= book.opinion %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>