<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <table>
          <tbody>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <%= form_with(model: @book, local: true) do |f| %>
          <h2>New Book</h2>
          <% if @book.errors.any? %>
            <div class="alert alert-warning">
              <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form">
            <label for="title">Title</label>
            <%= f.text_field :title %>
          </div>
          <div class="form">
            <label for="opinion">Opinion</label>
            <%= f.text_area :opinion %>
          </div>
          <div class="form">
            <%= f.submit "Create Book" %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        
      </div>
    </div>
  </div>
</div>