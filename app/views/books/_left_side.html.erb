<div class="col-xs-3">
  <h2>User info</h2>
  <% unless current_user.image %>
    <%= image_tag 'no_image.jpg' %>
  <% else %>
    <%= attachment_image_tag(current_user, :image, :fill, 100, 100, format: "jpg")%>
  <% end %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(current_user.id) do %>
      <i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></i>
    <% end %>
  </div>
  <h2>New Book</h2>
  <%= form_with(model: @book, local: true) do |f| %>
    <% if @book.errors.any? %>
      <div class="alert alert-warning">
        <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field row">
      <label for="title">Title</label>
      <%= f.text_field :title, class: "col-xs-12 book_title" %>
    </div>
    <div class="field row">
      <label for="opinion">Opinion</label>
      <%= f.text_area :opinion, class: "col-xs-12 book_body" %>
    </div>
    <div class="actions row">
      <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
    </div>
  <% end %>
</div>